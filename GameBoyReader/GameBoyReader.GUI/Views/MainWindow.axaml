<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GameBoyReader.GUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GameBoyReader.GUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GameBoy Reader"
		TransparencyLevelHint="AcrylicBlur"
        Background="Transparent">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<SplitView DisplayMode="CompactOverlay"
           CompactPaneLength="48"
           OpenPaneLength="200"
           IsPaneOpen="True">

		<SplitView.Pane>
			<StackPanel Margin="10" Spacing="10">

				<TextBlock Text="GameBoy Reader"
						   FontSize="20"
						   FontWeight="Bold"
						   HorizontalAlignment="Center"
						   Foreground="White"
						   Margin="0,10,0,20"/>

				<Button Content="Home"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Left"
						Margin="5,5"/>
				<Button Content="Settings"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Left"
						Margin="5,5"/>
				<Button Content="About"
						HorizontalAlignment="Stretch"
						HorizontalContentAlignment="Left"
						Margin="5,5"/>

				<StackPanel Margin="10">
					<TextBlock Text="Port COM:" Margin="0,10,0,5"/>
					<ComboBox ItemsSource="{Binding ComPorts}"
					  SelectedItem="{Binding SelectedComPort, Mode=TwoWay}"
					  HorizontalAlignment="Stretch"/>
				</StackPanel>

			</StackPanel>
		</SplitView.Pane>

		<SplitView.Content>
			<TextBlock Text="Test"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"/>
		</SplitView.Content>
	</SplitView>

</Window>
